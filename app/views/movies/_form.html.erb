<div class='form-container'>
  <%= form_with model: @movie do |f| %>
    <div>
      <%= f.label :title, 'Título' %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :release_year, 'Ano de lançamento' %>
      <%= f.number_field :release_year %>
    </div>
    <div>
      <%= f.label :country_of_origin, 'País de origem' %>
      <%= f.text_field :country_of_origin %>
    </div>
    <div>
      <%= f.label :duration, 'Duração(min)' %>
      <%= f.number_field :duration, placeholder:'min', class: 'duration-field' %>
    </div>
    <div>
      <%= f.label :director_id, 'Direção' %>
      <%= f.collection_select :director_id, Director.order(:name), :id, :name %>
    </div>
    <div>
      <%= f.label :genre_id, 'Gênero' %>
      <%= f.collection_select :genre_id, Genre.order(:name), :id, :name %>
    </div>
    <div>
      <%= f.label :synopsis, 'Sinopse' %>
      <%= f.text_area :synopsis, class:'synopsis-field' %>
    </div>
    <div>
      <%= f.label :image, 'Imagem de pôster' %>
      <%= f.file_field  :image %>
    </div>
    <div>
      <%= f.submit 'Enviar' %>
    </div>
  <% end %>
</div>