<h2>Cadastrar Novo Filme</h2>

<%= form_with model: @movie do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div>
  <div>
    <%= f.label :synopsis %>
    <%= f.text_area :synopsis %>
  </div>
  <div>
    <%= f.label :country_of_origin %>
    <%= f.text_field :country_of_origin %>
  </div>
  <div>
    <%= f.label :duration %>
    <%= f.number_field :duration %> min
  </div>
  <div>
    <%= f.label :director_id %>
    <%= f.collection_select :director_id, Director.all, :id, :name %>
  </div>
  <div>
    <%= f.label :genre_id %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>