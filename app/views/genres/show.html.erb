<h1><%= @genre.name %></h1>

<div class='edit'><%= link_to 'Editar', edit_genre_path %></div>

<div class='movie-list'>
  <h2>Filmes do Gênero</h2>

  <ul>
    <% @genre.movies.each do |movie| %>
      <li>
      <%= link_to movie_path(movie) do %>
        <%= movie.title %> (<%= movie.release_year %>)
        <div><%= image_tag movie.image, class:'img' %></div>
      <% end %>
      </li>
    <% end %>
  </ul>
</div>

<% if @genre.movies.empty? %>
  <p class='no-register'>Não há filmes desse gênero cadastrados!</p>
<% end %>